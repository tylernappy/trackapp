<!DOCTYPE html>
<html>
<head>
  <title>TrackAppTwo</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</head>
<body>

  <%= nav_bar :fixed => :top, :brand => "Jay's Track App" do %>
    <%= menu_group :pull => :right do %>

      <%= menu_item "About", static_about_path %>
      <% if current_coach %>
          <%= menu_item "Log Out", destroy_coach_session_path, method: :delete %>
      <% else %>
          <%= menu_item "Login", new_coach_session_path %>
      <% end %>

    <% end %>
  <% end %>

<%= yield %>

</body>
</html>
