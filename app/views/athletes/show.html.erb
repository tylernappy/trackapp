<div class="row">
  <div class="span12">
    <div class="row">
      <div class="span12"><%= @athlete.name %></div>
    </div>
    <div class="row">
      <div class="span12"><%= @athlete.grade %></div>
    </div>
    <div class="row">
      <% if @athlete.boy == true %>
        <div class="span12"><%= "Boy" %></div>
      <% elsif @athlete.girl == true  %>
        <div class="span12"><%= "Girl" %></div>
      <% end %>
    </div>
  </div>
</div>

<div class="btn-group">
  <%= link_to "Edit athlete", edit_coach_athlete_path(current_coach, @athlete), :class => 'btn btn-primary' %>
  <%= link_to "Delete athlete", coach_athlete_path, :class => 'btn btn-danger', method: :delete, confirm: "Are you sure you want to delete this athlete?" %>
</div>


<%= link_to "Back", seasons_path, :class => 'btn' %>
