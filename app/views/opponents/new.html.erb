<h1>Add Opponents</h1>
<div class="row">
  <div class="span6">
    <%= render "form" %>
  </div>
  <div class="span6">
    <% @opponents_already_created.each do |opponent|  %>
      <div class="row">
        <div class="span3"><%= School.find_by_id(opponent.school_id).name %></div>
        <div class="span3"><%= link_to "Delete opponent", season_meet_opponent_path(@season, @meet, opponent), :class => 'btn btn-danger', method: :delete, confirm: "Are you sure you want to delete this opponent?" %></div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "Finished", season_meet_path(@season, @meet), :class => 'btn' %>
